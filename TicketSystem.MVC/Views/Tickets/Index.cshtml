@model IEnumerable<TicketReadVM>;

@{
    DateTime? created = ViewData[Constants.TempDataKeys.Id] as DateTime?;
}
<div class="container">
    <a asp-action="Add" class="btn btn-outline-dark mb-2">Add Doctor</a>
    <table class="table table-dark table-striped ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Created Date</th>
                <th>Is Closed</th>
                <th>Severity</th>
                <th>Department ID</th>
                <th> Details</th>
                <th> Edit</th>
                <th> Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr class="@((created != null && created == ticket.CreatedDate) ? "text-success" : "")">
                    <td>@ticket.Id</td>
                    <td>@ticket.Email</td>
                    <td>@ticket.CreatedDate</td>
                    <td>@(ticket.IsClosed ? "Yes" : "No")</td>
                    <td>@ticket.Severity</td>
                    <td>@ticket.DepartmentId</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@ticket.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@ticket.Id">Edit</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@ticket.Id" method="post">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

                         